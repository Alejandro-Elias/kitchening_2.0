<div class="modal" id="warningModal<%= id %>" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="d-flex my-3">
          <i class="fa-solid fa-triangle-exclamation text-danger fs-1 text mx-auto" style="background-color: rgba(0, 0, 0, 0);" ></i>
        </div>
        <h4>Desea eliminar el producto <%= name %>?</h4>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <form action="/productos/eliminar/<%= id %>?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-sm btn-outline-danger">
            Si, eliminalo
          </button>
        </form>
      </div>
    </div>
  </div>
</div>